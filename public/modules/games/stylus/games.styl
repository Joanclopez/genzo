  width 60%
  height 150px
  margin-left 20%
  background-color #7ea5a4
  border-radius 50px
  margin-top 15px
.BattleRoom-avatarImg
  width 150px
  height 150px
.BattleRoom-name
  text-align center !important
  font-size 18px !important

