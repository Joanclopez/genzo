//General
.center
  margin 0 auto



//home
.navbar
  background-image none !important
  border none !important
  background-color rgba(4, 79,79, 0.75)
.navbar-brand
  color white !important
  font-size 1.5em !important
.navbar li a
  color white !important

section
  display block
  .bg
    position relative
    overflow hidden
    width 100%
    text-align center
    top 0
    left 0
    bottom 0
    right 0
    img
        position relative
        z-index 1
        width 100%
        height auto
        display block
    div.text
        position absolute
        z-index 2
        width 100%
        display block
        top 0
        right 0
        bottom 0
        left 0
        text-align center
        div.vertical
            vertical-align middle
            margin 25% auto
            div.center
                margin-right auto
                margin-left auto
                float none
                h2
                    font-family inherit
                    color white



//games url view
.view-content
  background-color #cedddd
.title
  h1
    text-align center
    color white
.Character-imageContainer
  width 100%
  margin-top 25px
