.PanelBattle
  background-color #CEDDDD
  height 100vh !important
#loading
  width 30px
  background-color #CEDDDD
.PanelInformation-img
  width 200px
.PanelInformation
  text-align center
  background-color #CEDDDD
  height 100vh !important
.PanelInformatino-itemSkill
  text-align left
  color black
//hologram
.Fight-content
  width: 100%
  height: 100vh
  background-color #000
  .spriteP1
    width 122px
    height 142px
    //background-image url('../modules/games/img/goku1.png')
    background-image url('../img/goku1.png')
  #north
    margin 0 auto
    transform rotate(180deg)
  .central
    #west
      float right
      transform rotate(90deg)
    #east
      float left
      transform rotate(-90deg)
  #south
    margin 0 auto
